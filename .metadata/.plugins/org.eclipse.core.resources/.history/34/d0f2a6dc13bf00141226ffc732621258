package Layout;

import java.awt.Rectangle;

import javax.swing.JFrame;

import myFrame.myJFrame;
import javax.swing.JPanel;
import java.awt.BorderLayout;

public class sample_BorderLayout {

	private static sample_BorderLayout sample_BorderLayout;
	private JFrame jframe;

	public static void main(String[] args) {
		sample_BorderLayout = new sample_BorderLayout();
	}

	sample_BorderLayout() {

		// JFrame
		jframe = new JFrame();
		jframe.setBounds(new Rectangle(0, 0, 250, 150));
		jframe.setTitle("Sample FlowLayout ");
		myJFrame.initJFrame(jframe);
		
		JPanel panel = new JPanel();
		jframe.getContentPane().add(panel, BorderLayout.NORTH);
		panel.setLayout(new BorderLayout(0, 0));

	}
}

package Layout;

import javax.swing.JFrame;

import myFrame.myJFrame;
import javax.swing.BoxLayout;
import javax.swing.JPanel;
import java.awt.FlowLayout;
import javax.swing.JButton;
import java.awt.Rectangle;
import javax.swing.GroupLayout;
import javax.swing.GroupLayout.Alignment;

public class sample_FlowLayout {

	private JFrame JFrame;
	private static sample_FlowLayout sample_FlowLayout;
	private JButton btnOk;
	private JButton btnCancel;
	private JButton btnNo;
	private JButton btnYes;

	public static void main(String[] args) {
		// TODO Auto-generated method stub

		sample_FlowLayout = new sample_FlowLayout();
	}

	sample_FlowLayout() {
		// JFrame
		JFrame = new JFrame();
	
		JFrame.setTitle("Sample FlowLayout ");
		myJFrame.initJFrame(JFrame);
	
		
		JPanel panel = new JPanel();
		panel.setLayout(new FlowLayout(FlowLayout.CENTER, 20, 20));
		
		btnOk = new JButton("OK");
		panel.add(btnOk);
		
		btnCancel = new JButton("Cancel");
		panel.add(btnCancel);
		
		btnNo = new JButton("No");
		panel.add(btnNo);
		
		btnYes = new JButton("Yes");
		panel.add(btnYes);
		JFrame.getContentPane().add(panel);
	}

}

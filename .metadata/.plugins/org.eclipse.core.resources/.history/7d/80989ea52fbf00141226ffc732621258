package Layout;

import java.awt.Rectangle;

import javax.swing.BoxLayout;
import javax.swing.JFrame;

import myFrame.myJFrame;
import javax.swing.JPanel;
import java.awt.GridLayout;
import javax.swing.JButton;

public class sample_GridLayout {

	private static sample_GridLayout sample_GridLayout;
	private JFrame jframe;

	public static void main(String[] args) {
		sample_GridLayout = new sample_GridLayout();
	}

	sample_GridLayout() {
		// JFrame
		jframe = new JFrame();
		jframe.setBounds(new Rectangle(0, 0, 200, 250));
		jframe.setTitle("Sample FlowLayout ");
		myJFrame.initJFrame(jframe);
		jframe.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		jframe.getContentPane().setLayout(
				new BoxLayout(jframe.getContentPane(), BoxLayout.PAGE_AXIS));

		JPanel panel = new JPanel();
		jframe.getContentPane().add(panel);
		panel.setLayout(new GridLayout(0, 3, 0, 0));

		JButton button = new JButton("1");
		panel.add(button);

		JButton button_1 = new JButton("2");
		panel.add(button_1);

		JButton button_2 = new JButton("3");
		panel.add(button_2);

		JButton button_3 = new JButton("4");
		panel.add(button_3);

		JButton button_4 = new JButton("5");
		panel.add(button_4);

		JButton button_5 = new JButton("6");
		panel.add(button_5);

		JButton button_6 = new JButton("7");
		panel.add(button_6);

		JButton button_7 = new JButton("8");
		panel.add(button_7);

		JButton button_8 = new JButton("9");
		panel.add(button_8);
		
		JButton button_9 = new JButton("10");
		panel.add(button_9);
		
		JButton button_10 = new JButton("11");
		panel.add(button_10);
		
		JButton button_11 = new JButton("12");
		panel.add(button_11);
	}
}

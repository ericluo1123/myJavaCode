package Layout;

import java.awt.Rectangle;

import javax.swing.BoxLayout;
import javax.swing.JFrame;

import myFrame.JFrameTools;
import javax.swing.JPanel;
import javax.swing.JButton;

public class sample_BoxLayout {

	private JFrame jframe;
	private JPanel panel;
	private BoxLayout boxLayout;

	/**
	 * ç›’
	 */
	sample_BoxLayout() {
		// JFrame
		jframe = new JFrame();
		jframe.setVisible(true);
		jframe.setBounds(new Rectangle(0, 0, 250, 150));
		jframe.setTitle("Sample Border Layout ");
		JFrameTools.setCenter(jframe);
		jframe.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		jframe.getContentPane().setLayout(
				new BoxLayout(jframe.getContentPane(), BoxLayout.PAGE_AXIS));

		panel = new JPanel();
		jframe.getContentPane().add(panel);
		boxLayout = new BoxLayout(panel, BoxLayout.X_AXIS);
		panel.setLayout(boxLayout);
	

		JButton btnXaxis = new JButton("X_AXIS 1");
		jframe.getContentPane().add(btnXaxis);

		JButton btnXaxis_1 = new JButton("X_AXIS 2");
		jframe.getContentPane().add(btnXaxis_1);

		JButton btnXaxis_2 = new JButton("X_AXIS 3");
		jframe.getContentPane().add(btnXaxis_2);

	}
}

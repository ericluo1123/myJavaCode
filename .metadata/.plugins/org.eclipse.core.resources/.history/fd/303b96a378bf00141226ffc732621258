package Layout;

import java.awt.Rectangle;

import javax.swing.BoxLayout;
import javax.swing.JFrame;
import javax.swing.OverlayLayout;

import myFrame.JFrameTools;

import javax.swing.JPanel;
import javax.swing.JButton;
import java.awt.Component;
import java.awt.Dimension;
import java.awt.BorderLayout;
import java.awt.FlowLayout;

public class sample_OverlayLayout {

	private JFrame jframe;
	private JPanel panel;
	private OverlayLayout overlayLayout;
	private JButton btnButton;

	/**
	 * 覆蓋
	 */
	sample_OverlayLayout() {
		// JFrame
		jframe = new JFrame();
		jframe.setVisible(true);
		jframe.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		jframe.setBounds(new Rectangle(0, 0, 200, 300));
		jframe.setTitle("Sample Overlay Layout ");
		JFrameTools.setCenter(jframe);
		jframe.getContentPane().setLayout(
				new FlowLayout(FlowLayout.CENTER, 5, 5));

		panel = new JPanel();
		jframe.getContentPane().add(panel);
		panel.setLayout(overlayLayout);

		overlayLayout = new OverlayLayout(panel);

		btnButton = new JButton("button 1");
		btnButton.setMinimumSize(new Dimension(50, 50));
		btnButton.setPreferredSize(new Dimension(100, 100));
		btnButton.setAlignmentY(Component.TOP_ALIGNMENT);
		btnButton.setAlignmentX(Component.CENTER_ALIGNMENT);
		panel.add(btnButton);

	}
}
